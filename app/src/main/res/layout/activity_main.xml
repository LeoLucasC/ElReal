<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#303030"
    tools:context=".MainActivity">

    <!-- Botones numéricos y operadores -->

    <TextView
        android:id="@+id/display"
        android:layout_width="412dp"
        android:layout_height="151dp"
        android:background="#424242"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="390dp"
        android:layout_height="553dp"
        android:layout_margin="8dp"
        android:background="#303030"
        android:columnCount="4"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintVertical_bias="1.0">

        <!-- Fila pi -->

        <Button
            android:id="@+id/button_raiz"

            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:backgroundTint="#971B1B"
            android:text="√"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_pi"

            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:backgroundTint="#971B1B"
            android:text="π"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_potencia"

            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:backgroundTint="#971B1B"
            android:text="^"
            android:textSize="24sp" />


        <Button
            android:id="@+id/button_admiracion"

            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:backgroundTint="#971B1B"
            android:text="!"
            android:textSize="24sp" />


        <!-- Fila 1 -->

        <Button
            android:id="@+id/button_ac"

            android:layout_height="89dp"
            android:layout_margin="4dp"
            android:backgroundTint="#D32727"
            android:text="AC"
            android:textSize="35sp" />


        <Button
            android:id="@+id/button_monedas"

            android:layout_height="90dp"
            android:layout_margin="4dp"
            android:text="Cn"
            android:textSize="35sp" />

        <Button
            android:id="@+id/button_percent"

            android:layout_height="87dp"
            android:layout_margin="4dp"
            android:text="%"
            android:textSize="40sp" />


        <Button
            android:id="@+id/button_division"

            android:layout_height="92dp"
            android:layout_margin="4dp"
            android:text="÷"
            android:textSize="40sp" />

        <!-- Fila 2 -->

        <Button
            android:id="@+id/button_7"

            android:layout_height="88dp"
            android:layout_margin="4dp"
            android:backgroundTint="#5B5353"
            android:text="7"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button_8"

            android:layout_height="91dp"
            android:layout_margin="4dp"
            android:backgroundTint="#5B5353"
            android:text="8"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button_9"

            android:layout_height="89dp"
            android:layout_margin="4dp"
            android:backgroundTint="#5B5353"
            android:text="9"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button_multiply"

            android:layout_height="87dp"
            android:layout_margin="4dp"
            android:text="×"
            android:textSize="40sp" />


        <!-- Fila 3 -->
        <Button
            android:id="@+id/button_4"

            android:layout_height="87dp"
            android:layout_margin="4dp"
            android:backgroundTint="#5B5353"
            android:text="4"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button_5"

            android:layout_height="89dp"
            android:layout_margin="4dp"
            android:backgroundTint="#5B5353"
            android:text="5"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button_6"

            android:layout_height="85dp"
            android:layout_margin="4dp"
            android:backgroundTint="#5B5353"
            android:text="6"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button_minus"

            android:layout_height="90dp"
            android:layout_margin="4dp"
            android:text="−"
            android:textSize="40sp" />

        <!-- Fila 4 -->
        <Button
            android:id="@+id/button_1"

            android:layout_height="89dp"
            android:layout_margin="4dp"
            android:backgroundTint="#5B5353"
            android:text="1"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button_2"

            android:layout_height="84dp"
            android:layout_margin="4dp"
            android:backgroundTint="#5B5353"
            android:text="2"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button_3"

            android:layout_height="90dp"
            android:layout_margin="4dp"
            android:backgroundTint="#5B5353"
            android:text="3"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button_plus"

            android:layout_height="89dp"
            android:layout_margin="4dp"
            android:text="+"
            android:textSize="40sp" />


        <!-- Fila 5 -->
        <Button
            android:id="@+id/button_0"

            android:layout_height="89dp"
            android:layout_margin="4dp"
            android:backgroundTint="#5B5353"
            android:text="0"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button_punto"

            android:layout_height="84dp"
            android:layout_margin="4dp"
            android:backgroundTint="#5B5353"
            android:text="."
            android:textSize="40sp" />

        <Button
            android:id="@+id/button_borrar"

            android:layout_height="90dp"
            android:layout_margin="4dp"
            android:backgroundTint="#CC2828"
            android:text="C"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button_igual"

            android:layout_height="89dp"
            android:layout_margin="4dp"
            android:text="="
            android:textSize="40sp" />


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
